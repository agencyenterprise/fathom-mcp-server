{
  "name": "fathom-mcp-server",
  "version": "1.0.1",
  "description": "MCP server connecting Claude to Fathom meeting recordings, transcripts, and summaries",
  "type": "module",
  "license": "MIT",
  "author": "Jeff Patterson <jeff@ae.studio>",
  "repository": {
    "type": "git",
    "url": "https://github.com/agencyenterprise/fathom-mcp-server"
  },
  "keywords": [
    "mcp",
    "fathom",
    "claude",
    "meetings",
    "transcripts",
    "ai"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup && cp -r public dist/",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run lint && npm run typecheck && npm run test:coverage && npm run build",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "pg": "^8.13.1",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "zod": "^4.3.6",
    "zod-openapi": "^5.4.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
